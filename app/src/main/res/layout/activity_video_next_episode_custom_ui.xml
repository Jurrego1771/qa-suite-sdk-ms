<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Player Section -->
    <FrameLayout
        android:id="@+id/main_media_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:keepScreenOn="true" />

    <!-- Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Episode Mode"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextEpisodeDefault"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="DEFAULT (API)"
                android:textAllCaps="false"
                app:cornerRadius="10dp"
                app:backgroundTint="@color/card_background"
                android:textColor="@color/text_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextEpisodeCustom"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="CUSTOM (Manual)"
                android:textAllCaps="false"
                app:cornerRadius="10dp"
                app:backgroundTint="@color/card_background"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNextEpisodeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Estado: -"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Nota: en CUSTOM el overlay solo aparece tras updateNextEpisode()."
            android:textColor="@color/text_secondary"
            android:textSize="11sp" />

    </LinearLayout>

</LinearLayout>

