<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Player Container (Hidden for Audio) -->
    <FrameLayout
        android:id="@+id/main_media_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:keepScreenOn="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Radio UI Container -->
    <LinearLayout
        android:id="@+id/radioContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/card_background"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <!-- Station Info -->
        <TextView
            android:id="@+id/tvStationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Live Radio Station"
            android:textColor="@color/accent_audio"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCurrentSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevious"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="16dp"
                android:text="⏮"
                android:textSize="20sp"
                app:backgroundTint="@color/card_background"
                app:cornerRadius="28dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlayPause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="▶"
                android:textSize="32sp"
                app:backgroundTint="@color/accent_audio"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:text="⏭"
                android:textSize="20sp"
                app:backgroundTint="@color/card_background"
                app:cornerRadius="28dp" />

        </LinearLayout>

        <!-- Event Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Status"
            android:textColor="@color/accent_audio"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvEventStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:background="@color/background_dark"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Events Log -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Log"
            android:textColor="@color/accent_audio"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:id="@+id/scrollEvents"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/background_dark"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvEventsLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waiting for events..."
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp" />

        </ScrollView>

        <!-- Clear Log Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Log"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            app:backgroundTint="@color/background_dark" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
